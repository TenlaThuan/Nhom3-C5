@{
    ViewData["Title"] = "Login";
}
<style>
    body {
        background-image: url('/image/CFBG.jpg');
        background-size: cover;
        background-position: center;
    }
</style>
<div class="d-flex justify-content-center">
    <form class="w-40 border border-1 m-5 p-5">
        <center><h2>The Drink Store</h2></center>
        <div class="mb-3">
            <label class="form-label">Tài khoản</label>
            <div class="input-group">
                <span class="input-group-text bi bi-person-fill"></span>
                <input type="text"
                       class="form-control"
                       required />
            </div>
        </div>
        <div class="mb-3">
            <label class="form-label">Mật khẩu</label>
            <div class="input-group">
                <span class="input-group-text bi bi-key-fill"></span>
                <input type="password"
                       class="form-control"
                       required />
            </div>
        </div>
        <center>
            <button class="btn btn-primary" type="button">
                Đăng nhập
            </button>
        </center>
        <center class="pt-2">
            Bạn chưa có tài khoản?
            <a asp-controller="Register" asp-action="Index">Đăng ký ngay!</a>
        </center>
    </form>
</div>